<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto">

 <data>

  <variable
   name="clicker"
   type="com.example.demo.zbase.Clicker" />

  <variable
   name="vm"
   type="com.example.demo.update.UpdateBeanVM" />
 </data>

 <android.support.constraint.ConstraintLayout

  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
   android:id="@+id/tv_count"
   style="@style/text"
   android:text="@{vm.bean.text}"
   android:layout_width="match_parent"
   android:onClick="@{clicker}"
   app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintTop_toTopOf="parent" />

  <Button
   android:id="@+id/bt1"
   style="@style/text"
   android:layout_width="0dp"
   android:onClick="@{clicker}"
   android:text="create"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintHorizontal_weight="1"
   app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintRight_toLeftOf="@id/bt2" />

  <Button
   android:id="@+id/bt2"
   style="@style/text"
   android:layout_width="0dp"
   android:onClick="@{clicker}"
   android:text="add"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintHorizontal_weight="1"
   app:layout_constraintLeft_toRightOf="@id/bt1"
   app:layout_constraintRight_toLeftOf="@id/bt3" />

  <Button
   android:id="@+id/bt3"
   style="@style/text"
   android:layout_width="0dp"
   android:onClick="@{clicker}"
   android:text="bind"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintHorizontal_weight="1"
   app:layout_constraintLeft_toRightOf="@id/bt2"
   app:layout_constraintRight_toRightOf="parent" />
 </android.support.constraint.ConstraintLayout>
</layout>
