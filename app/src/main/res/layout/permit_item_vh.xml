<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto">

 <data>

  <variable
   name="vm"
   type="com.example.demo.permit.rv.PermitItemVM" />

  <variable
   name="clicker"
   type="com.example.demo.zbase.Clicker" />
 </data>

 <android.support.constraint.ConstraintLayout
  android:id="@+id/bt"
  style="@style/item_h"
  android:layout_height="45dp">

  <TextView
   android:id="@+id/tv_name"
   style="@style/text"
   android:layout_width="0dp"
   android:layout_height="0dp"
   android:text="@{vm.name}"
   android:textSize="12sp"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintRight_toLeftOf="@id/bt_check"
   app:layout_constraintTop_toTopOf="parent" />

  <Button
   android:id="@+id/bt_check"
   android:layout_width="wrap_content"
   android:layout_height="0dp"
   android:onClick="@{clicker}"
   android:text="C"
   android:textSize="12sp"
   app:layout_constraintBottom_toBottomOf="@id/tv_name"
   app:layout_constraintLeft_toRightOf="@id/tv_name"
   app:layout_constraintRight_toLeftOf="@id/bt_open"
   app:layout_constraintTop_toTopOf="@id/tv_name" />

  <Button
   android:id="@+id/bt_open"
   android:layout_width="wrap_content"
   android:layout_height="0dp"
   android:onClick="@{clicker}"
   android:text="OPEN"
   android:textSize="12sp"
   app:layout_constraintBottom_toBottomOf="@id/tv_name"
   app:layout_constraintLeft_toRightOf="@id/bt_check"
   app:layout_constraintRight_toRightOf="parent"
   app:layout_constraintTop_toTopOf="@id/tv_name" />

 </android.support.constraint.ConstraintLayout>
</layout>
